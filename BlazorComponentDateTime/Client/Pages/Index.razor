@page "/"
@using DateTimeComponent
@using DateTimeComponent.Models
<PageTitle>Index</PageTitle>

<div>
    <p>
        Display 24h
        <input type="checkbox" checked=@is24h @bind-value="@is24h" />
    </p>
</div>

<h2>Benchmark</h2>
<div class="element-container">
    <div class="title">Time with blinking .NET timer</div>
    <SystemWatchComponent ClockDisplay="WatchDisplayEnum.WithSecondsAndBlinking" Is24H=is24h EnableJsTime="false" />
</div>
<div class="element-container">
    <div class="title">Time with blinking JS</div>
    <SystemWatchComponent ClockDisplay="WatchDisplayEnum.WithSecondsAndBlinking" Is24H=is24h EnableJsTime="true" />
</div>


